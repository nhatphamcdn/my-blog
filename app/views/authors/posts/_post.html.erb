<tr>
  <td><%= link_to post.title, authors_post_path(post) %></td>
  <td><%= raw post.tags.map{ |t| link_to t.name, "#" }.join(', ') %></td>
  <td><%= post.description %></td>
  <% if post.published? %>
  <td><%= link_to 'unpublish', unpublish_authors_post_path(post), :method => :put, :remote => true, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
  <td><%= link_to 'Publish', publish_authors_post_path(post), :method => :put, :remote => true, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
