<% unless notice.blank? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Body</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% unless @posts.empty? %>
  <tbody>
    <%= render @posts %>
  </tbody>
  <% end %>
</table>

<br>

<%= link_to 'New Post', new_authors_post_path, :class => 'btn btn-primary' %>
